<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF80AB"
    tools:context="com.pmaptechnotech.smartworkflow.activites.PasswordCreationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Welcome to Password Creation Page"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold|normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="Enter your register mobile number"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:digits="0123456789+"
            android:inputType="phone"
            android:maxLength="12"
            android:hint="Mobile Number"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:textColorHint="#cfc0c0" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_background"
            android:text=" Submit "
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold|normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="Enter OTP to generate new password"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="4"
            android:cursorVisible="false"
            android:gravity="center"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:textColorHint="#cfc0c0"
            android:textStyle="bold|normal" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text=" Next "
            android:background="@drawable/button_background"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold|normal" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
