<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF80AB"
    tools:context="com.pmaptechnotech.smartworkflow.activites.TasksPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tasks Page"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold|normal" />

        <Button
            android:id="@+id/btn_group_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="#F06292"
            android:text="Group Task"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold|normal" />

        <Button
            android:id="@+id/btn_individual_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="#F06292"
            android:text="Individual Task"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold|normal" />

        <Button
            android:id="@+id/btn_task_assign_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="#F06292"
            android:text="Task Assign Page"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold|normal" />

        <Button
            android:id="@+id/btn_log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="#F06292"
            android:text="Log out"
            android:layout_gravity="left"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold|normal" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
